<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ToolbarStyle"
	       parent="Widget.AppCompat.ActionBar">
		<item name="android:background">@color/color_primary</item>
		<item name="android:textColorSecondary">@android:color/white</item>
		<item name="actionMenuTextColor">@android:color/white</item>
		<item name="android:actionMenuTextColor">@android:color/white</item>
		<item name="contentInsetStartWithNavigation">0dp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Toolbar.TitleText"
	       parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="Toolbar.SubtitleText"
	       parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
		<item name="android:textSize">10sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="TagStyle"
	       parent="@android:style/TextAppearance">
		<item name="fontPath">@string/font_lato_heavy</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">24dp</item>
		<item name="android:paddingEnd">14dp</item>
		<item name="android:paddingLeft">14dp</item>
		<item name="android:paddingRight">14dp</item>
		<item name="android:paddingStart">14dp</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#366287</item>
		<item name="android:textSize">10sp</item>
	</style>

	<style name="TitleTextStyle"
	       parent="@android:style/TextAppearance">
		<item name="fontPath">@string/font_playfair_display_black</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">26sp</item>
		<item name="android:ellipsize">end</item>
		<item name="android:maxLines">3</item>
	</style>

	<style name="HeaderTextStyle"
	       parent="@android:style/TextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/color_primary_dark</item>
	</style>

	<style name="DescriptionTextStyle"
	       parent="@android:style/TextAppearance">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/color_primary_dark</item>
	</style>

	<style name="ContentTextStyle"
	       parent="@android:style/TextAppearance">
		<item name="android:alpha">0.6</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="fontPath">@string/font_lato_regular</item>
		<item name="android:textSize">12sp</item>
		<item name="android:lineSpacingExtra">12dp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
</resources>